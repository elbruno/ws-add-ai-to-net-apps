{
    "name": "NET 8 + Ollama + Phi-3 + Aspire Dashboard",
    "image": "mcr.microsoft.com/devcontainers/dotnet",
    "features": {
      "ghcr.io/devcontainers/features/dotnet:2": { "version": "8.0"},
      "ghcr.io/devcontainers/features/kubectl-helm-minikube:1": {},
      "ghcr.io/devcontainers/features/azure-cli:1": {},
      "ghcr.io/devcontainers/features/docker-from-docker:1.4.5": {},
      "ghcr.io/devcontainers/features/github-cli:1": { "version": "2" },
      "ghcr.io/prulloac/devcontainer-features/ollama:1": {},      
      "sshd": "latest"
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-vscode.vscode-node-azure-pack",
                "github.vscode-github-actions",
                "ms-dotnettools.csdevkit",
				"ms-dotnettools.vscode-dotnet-runtime",
                "github.copilot"
            ]
        }
    },
    "forwardPorts": [
        32000,
        32001
    ],
    "postCreateCommand": "sudo dotnet workload update & sudo dotnet workload install aspire & sudo dotnet workload list",
    "postStartCommand": "echo 'start post start commands' & docker run --rm -it -p 18888:18888 -p 4317:18889 -d --name aspire-dashboard mcr.microsoft.com/dotnet/aspire-dashboard:8.0.0 & ollama pull phi3",
    "remoteUser": "vscode",
    "hostRequirements": {
        "memory": "8gb",
        "cpus": 4
    },
    "portsAttributes": {
        "11434": {
            "label": "Ollama"
        },
        "4317": {
            "label": "Aspire Dashboard Endpoint"
        }
    }
}
